<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sorcererxw.matthiasheiderichphotography.ui.activities.DetailActivity">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fitsSystemWindows="true"/>

    <com.sorcererxw.matthiasheiderichphotography.ui.views.TypefaceToolbar
        android:id="@+id/toolbar_detail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="@dimen/status_bar_height"
        android:background="@color/transparent"
        android:elevation="4dp"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/loadingIndicator_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/accent"
        android:layout_gravity="center"
        app:indicatorName="LineScalePulseOutIndicator"/>

    <uk.co.senab.photoview.PhotoView
        android:id="@+id/imageView_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:transitionName="image"/>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_detail"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        app:layout_behavior="com.sorcererxw.matthiasheiderichphotography.ui.others.FloatingActionButtonBehavior">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_detail_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cloud_download_white_18dp"
            app:fab_label="Save"
            app:fab_size="normal"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_detail_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wallpaper_white_18dp"
            app:fab_label="Set Wallpaper"
            app:fab_size="normal"/>
    </com.github.clans.fab.FloatingActionMenu>

</android.support.design.widget.CoordinatorLayout>
